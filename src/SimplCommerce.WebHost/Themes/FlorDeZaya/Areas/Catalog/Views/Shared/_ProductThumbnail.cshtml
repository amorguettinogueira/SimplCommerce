@model SimplCommerce.Module.Catalog.Areas.Catalog.ViewModels.ProductThumbnail

<div class="fz-block text-center add-to-cart col">
    <form class="inline">
        <input type="hidden" name="productId" value="@Model.Id" />
        <div class="fz-image" style="background-image: url(@Model.ThumbnailUrl);transform: rotate(0);">
            <a class="stretched-link" href="~/@Model.Slug"></a>
        </div>
        <div class="fz-info">
            <div class="flex-column d-flex flex-column">
                <a class="fz-cart btn-add-cart"><i class="fa-solid fa-cart-plus fa-xl"></i></a>
                <a class="fz-order add-to-wishlist" href="#"><i class="fa-solid fa-face-grin-hearts fa-xl"></i></a>
            </div>
            <div class="flex-column d-flex flex-column flex-grow-1" style="transform: rotate(0);">
                <div class="text-left">
                    <a class="stretched-link text-decoration-none" href="~/@Model.Slug"><h5 class="mb-0 mt-2">@Model.Name</h5></a>
                    <small class="text-muted mb-1">Men's Stylish Designed Shirt</small>
                </div>
                @*<div class="col-auto pull-left">*@
                    @if (Model.IsCallForPricing)
                    {
                        <h5>@Localizer["Call for pricing"]</h5>
                    }
                    else
                    {
                        <h5>
                        @if (Model.CalculatedProductPrice.PercentOfSaving > 0)
                        {
                            <span class="fz-old-price">@Model.CalculatedProductPrice.OldPriceString</span>
                        }
                        @Model.CalculatedProductPrice.PriceString
                        @if (Model.CalculatedProductPrice.PercentOfSaving > 0)
                        {
                            <span class="fz-discount">-@Model.CalculatedProductPrice.PercentOfSaving%</span>
                        }
                        </h5>
                    }
@*                </div>
                <div class="col-auto float-end">
                    <ul class="list-inline product-ratings">
                        <li><input type="hidden" value="@Model.RatingAverage" readonly="readonly" class="rating-loading" step="1" data-size="xs" data-show-clear="false" data-show-caption="false" /></li>
                        @if (Model.ReviewsCount > 0)
                        {
                            <li class="product-review-list">
                                <span>(@Model.ReviewsCount @Localizer["reviews"])</span>
                            </li>
                        }
                    </ul>
                </div>*@
            </div>
        </div>
    </form>
</div>
